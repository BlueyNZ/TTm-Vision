
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

  }
}
