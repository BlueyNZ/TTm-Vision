rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access for all authenticated users.
    // This is a permissive rule for development.
    // For production, you should restrict access further based on your app's logic.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}